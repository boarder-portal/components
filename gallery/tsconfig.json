{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "strict": true,
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "emitDeclarationOnly": true,
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/node_modules/*",
    "**/dist/*"
  ]
}
